
<div class="non-flex-container">

  <!-- HEADER ------------------------------- -->
  <div class="header">

  <div class="banner-half" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @article.event.image_url %>');">

    <div class="banner-content">

      <p>Location: <%= @article.event.location %></p>
      <p>Date: <%= @article.event.date_time %></p>
      <h4>Topic: <%= @article.event.topic.name %></h4>
      <h3>Event: <%= @article.event.name %></h3>
      <p>Description: <%= @article.event.description %></p>

      <%= link_to "Previous Article", article_path(@prev_article), class: "btn btn-success" %>
      <%= link_to "Next Article", article_path(@next_article), class: "btn btn-success" %>

    </div>
    <!-- banner-content end -->
  </div>
  <!-- banner-half end -->

</div>
<!-- header end -->

<ul class="flex-container">

  <!-- SIDEBAR 1 - EMPTY ------------------------------- -->

  <li class="flex-item flex-sidebar-left">
  </li>

  <!-- ARTICLE ------------------------------------------ -->

  <li class="flex-item flex-main">
    <p> Article Title: </p>
    <h1> <%= @article.title %></h1>

    <p> Publishing Time</p>
    <p> <%= @article.date_time_published %></p>

    <p> Description:</p>
    <p><%= @article.description %> </p>

    <p> Article Text:</p>
    <p><%= @article.body_text %> </p>

    <p> Publisher: </p>
    <p><%= @article.publisher.name %> </p>

    <p> Author: </p>
    <p><%= @article.author.first_name %> </p>

    <p> Article Image:</p>
    <p><%= @article.image_url %>

    <p> Article Location:</p>
    <p> <%= @article.location %> </p>
    <p> <%= @article.lat %> </p>
    <p> <%= @article.lng %> </p>

    <p> Article Average Score:</p>
    <p> <%= @article.average_user_score %> </p>

    <p> Article Views:</p>
    <p> <%= @article.count_views %> </p>

  </li>

  <!-- SIDEBAR 2 - RELATED ARTICLES ------------------------------- -->

  <li class="flex-item flex-sidebar-right">

    <p>Related Articles</p>
    <p>Location: Distance</p>
    <p>Popularity: Average Userscore</p>
    <p>Views: user:Views</p>


    <p><%= @article.event.topic.name %></p>
    <h3><%= @article.event.name %></h3>

    <% @related_articles.each do | article | %>
      <div class="card-article" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= article.image_url %>);">
        <!-- <div class="card-category"><%= article.location %></div> -->
        <div class="card-description">

            <ul>
              <li>
                <p><%= article.title %></p>
                <p><%= article.publisher.name %></p>
                <p><%= article.description %></p>
                <p><%= article.date_time_published %></p>
                <p><%= link_to "article link", article_path(article) %></p>
              </li>
            </ul>

        </div>

        <img class="card-user" src="<%= article.publisher.image_url %>">

      </div>
    <% end %> <!-- article loop end -->


  </li>

  <!-- FOOTER ------------------------------- -->
  <li class="flex-item flex-footer">

  </li>
</ul> <!-- flex-container end -->








