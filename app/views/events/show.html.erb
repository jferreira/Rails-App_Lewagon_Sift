<!-- EVENT PAGE HEADER ------------------------------- -->

<div class="header">

    <div class="banner-half"
    style="background-image: linear-gradient(-225deg, rgba(161,90,187,0.6) 0%, rgba(45,23,54,0.8) 50%),
       url(<%= @event.image_url %>);">

        <div class="row">

          <!-- LEFT COL -->
          <div class="col-xs-3">

            <!-- 1 -->
              <div class="top-box">
              </div>

            <!-- 2 -->
              <div class="middle-box">

                <h2 class="text-right">

                  <button>
                    <span id="user-suggests-url" class="blocked">
                      &nbsp <i class="fas fa-plus"></i>  &nbsp
                    </span>
                  </button>

                </h2>
              </div>

            <!-- 3 -->
            <div class="bottom-box">
            </div>

          </div>
          <!-- LEFT COL END -->

          <!-- MAIN COL -->
          <div class="col-xs-9">

            <!-- ---- HEADER TITLES CARD ----- -->

              <!-- LOCATION TAG -->
              <p><span class="blocked-tag">&nbsp <%= @event.location %>  &nbsp</span></p>
              <!-- TIME TAG -->
              <p><span class="blocked-tag">&nbsp <%= @event.articles.first.date_time_published %>  &nbsp</span></p>
              <p></p>
              <!-- TOPIC HEADER -->
              <h2><span
                class="blocked">&nbsp <%= link_to "#", root_path(" ") %> &nbsp</span><span
                class="blocked">&nbsp <%= link_to @event.topic.name, topic_path(@event.topic)%> &nbsp
              </span></h2>
              <!-- EVENT HEADER -->
              <h2><span
                class="blocked">&nbsp <%= link_to "#", root_path("") %> &nbsp</span><span
                class="blocked">&nbsp <%= @event.name %> &nbsp
              </span></h2>
              <p></p>
              <p></p>
              <p>Description: <%= @event.articles.count %> Articles: <%= @event.description %></p>

              <%= link_to "Previous", event_path(" "), class: "btn btn-default" %>
              <%= link_to "Next", event_path(" "), class: "btn btn-default" %>

            <br>
            <br>

            <!-- ---- HEADER CARD END ----- -->

          </div>
          <!-- col two end -->

          <div id="right-col" class="col-0">
          </div>
          <!-- col three end -->

        </div>
        <!-- row end -->

  </div>
  <!-- banner-half end -->

</div>
<!-- header end -->
<!-- EVENT PAGE HEADER END------------------------------- -->

<!-- EVENTS ARTICLE LIST ------------------------------- -->


<div class="container">
  <div class="row">
    <% @event.articles.each_with_index do |article, i| %>

        <div class="flex-item flex-sidebar-left">

      <!-- USER SCORES ------------------------------------------ -->

      <div class="user-scores-container">

          <form class="new_user_score" id="new_user_score" action="/articles/2/user_scores" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="aKTTC1RtNbxgUwkhK6PuRfuE8/zcQ67uJsBer/N8WqVnX48xygT4bfbhM+ymC9vhCnyqDwwGPSBKk417lunZ8Q==">
            <input value="1" type="hidden" name="user_score[score]" id="user_score_score">
            <button name="button" type="submit">
                      <i class="fas fa-chevron-up"></i>
            </button>
          </form>

            <% if @raw_scores.present?  %>
                <p class="avg-score"><%= @raw_scores %></p>
              <% else %>
                <p class="avg-score">0</p>
            <% end %>

          <form class="new_user_score" id="new_user_score" action="/articles/2/user_scores" accept-charset="UTF-8" method="post"><input name="utf8" type="hidden" value="✓"><input type="hidden" name="authenticity_token" value="aKTTC1RtNbxgUwkhK6PuRfuE8/zcQ67uJsBer/N8WqVnX48xygT4bfbhM+ymC9vhCnyqDwwGPSBKk417lunZ8Q==">
            <input value="-1" type="hidden" name="user_score[score]" id="user_score_score">
            <button name="button" type="submit">
                      <i class="fas fa-chevron-down"></i>
            </button>
          </form>

      </div>

    </div>

        <div class="s-card-article">
      <div class="s-image-article" style="background-image: linear-gradient(-225deg, rgba(161,90,187,0.6) 0%, rgba(45,23,54,0.8) 50%), url(<%= article.image_url %>);"><h3>#<%= (i + 1) %></h3>
      </div>

      <div class="s-card-publisher">
        <h3 class="s-card-header-text"><%= article.publisher.name %></h3>
        <img class="s-image-publisher" src= <%= article.publisher.image_url %> >
      </div>
      <div class="s-card-body s-card-text" >
        <h3><%= article.title %></h3>
        <br>
        <p><%= article.description%></p>
        <p><%= article.date_time_published%></p>
        <p><% time_read = article.body_text.reading_time :format => :approx %></p>


      <h4><%= time_read.include?('seconds') ? '1 minute' : time_read %> read</h4>

        <% day_num = article.date_time_published.mday %>
            <% case day_num
               when 1 %><% date_sufix = 'st' %>
            <% when 2 %><% date_sufix = 'nd' %>
            <% when 3 %><% date_sufix = 'rd' %>
            <% else %><% date_sufix = 'th' %>
            <% end %>
        <p><%= article.date_time_published.mday %><%= date_sufix %></p>
        <p><%= article.date_time_published.strftime("%H") %>.00</p>
        <% time_read = article.body_text.reading_time :format => :approx %>
          <!-- Below: If time is only seconds display '1 minute' otherwise display actual time -->
        <br>
      <p><%= link_to "See Article", article_path(article) %></p>

      </div>
    </div>


      <% end %>
</div>
</div>









