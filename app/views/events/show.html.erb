<!-- [ HEADER ] ------------------- START ---------------------- -->

<div class="header">

    <div class="banner-half"
    style="background-image:
      linear-gradient(-225deg,
      rgba(150,10,115,0.8) 0%,
      rgba(255,77,0,0.4) 50%),
    url(<%= @event.image_url %>);">

        <div class="row">

          <!-- MAIN COL -->
          <div class="col-xs-9">

            <!-- ---- [ HEADER TITLES CARD ] ------ START --------- -->

              <!-- LOCATION TAG -->
              <p><span class="blocked-tag">&nbsp <%= @event.location %>  &nbsp</span></p>
              <!-- TIME TAG -->
              <p><span class="blocked-tag">&nbsp <%= @event.articles.first.date_time_published %>  &nbsp</span></p>
              <p></p>

              <!-- TOPIC HEADER -->

              <h2>

                <span class="blocked add-topic-title">
                  <%= render 'following_items/form',
                    following_item: @following_item,
                    follower_type: 'Topic',
                    follower_id: @topic.id
                  %>
                </span>

                <span class="blocked topic-title">&nbsp <%= @event.topic.name %> &nbsp </span>
                <span class="list-notification-topic"><i class="fas fa-check"></i>  Item Added</span>

              </h2>


            <!-- ---- [ HEADER TITLES CARD ] ------ END --------- -->

              <h2>

              <span class="blocked add-event-title">
                  <%= render 'following_items/form',
                    # article: @article,
                    following_item: @following_item,
                    follower_type: 'Event',
                    follower_id: @event.id
                  %>
              </span>

              <span class="blocked event-title">&nbsp <%= @event.name %> &nbsp </span>
              <span class="list-notification-event"><i class="fas fa-check"></i>  Item Added</span>

              </h2>

              <p>Description: <%= @event.articles.count %> Articles: <%= @event.description %></p>

                <!-- [ NEXT EVENT ] -------- START -------------->

                <span><%=
                  link_to "Previous Event",
                  event_path(@prev_event),
                  class: "btn btn-outline-purple" %>
                </span>

                <span><%=
                  link_to "Next Event",
                  event_path(@next_event),
                  class: "btn btn-outline-purple" %>
                </span>

                <!-- [ NEXT EVENT ] -------- END -------------->

            <!-- ---- HEADER CARD END ----- -->

          </div>
          <!-- col three end -->

        </div>
        <!-- row end -->

  </div>
  <!-- banner-half end -->

</div>
<!-- header end -->

<!-- [ HEADER ] ----------------------- [ END ] ------------------ -->


